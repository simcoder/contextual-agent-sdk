
# LLM Providers
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
OLLAMA_HOST=http://localhost:11434
CUSTOM_LLM_API_KEY=your-custom-llm-key
CUSTOM_LLM_ENDPOINT=https://api.example.com/v1/chat/completions
DEFAULT_LLM_PROVIDER=openai
FALLBACK_LLM_PROVIDER=ollama
### Speech-to-Text API Keys
# OpenAI Whisper (uses OPENAI_API_KEY)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Cloud Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# Azure Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# AWS Transcribe
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Assembly AI
ASSEMBLYAI_API_KEY=your-assemblyai-key

# Rev.ai
REVAI_ACCESS_TOKEN=your-revai-token

# Deepgram
DEEPGRAM_API_KEY=your-deepgram-key

### Text-to-Speech API Keys
# OpenAI TTS (uses OPENAI_API_KEY)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Cloud TTS (uses same credentials as STT)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure TTS (uses same credentials as STT)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# AWS Polly (uses same credentials as AWS Transcribe)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-key

### Storage Configuration
# Redis
REDIS_URL=redis://localhost:6379
REDIS_SSL=false

# MongoDB
MONGODB_URL=mongodb://localhost:27017/contextual-agent
MONGODB_SSL=false

# Session Settings
SESSION_MAX_AGE=3600000
SESSION_CLEANUP_INTERVAL=600000
# STT Defaults
DEFAULT_STT_LANGUAGE=en-US
DEFAULT_STT_MODEL=whisper-1

# TTS Defaults
DEFAULT_TTS_VOICE=alloy
DEFAULT_TTS_FORMAT=mp3
DEFAULT_TTS_SPEED=1.0

